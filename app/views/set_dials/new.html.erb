

<p> <%= Topic.find(@dial.topic_id).topic %> </p>



<div id="dial" data_controller="set_the_dial">
<button data-action="click->instructions#reveal" class="btn btn-outline-primary">Set the dial</button>
<div data-set_the_dial-target="revealInstructions" class="d-none">
  <%= render "instructions" %>
</div>
  <p> Set the dial </p>
<%= @setter_value %>
</div>





<h2> <%= @dial.left %> <--------> <%= @dial.right %> </h2>

<p> Type your answer based on the dial place </p>

<%= form_with model: @set_dial do |f| %>
  <%= f.text_field :setter_word %>
  <br>
  <%= f.submit %>
<% end %>
