<div class="topic-cards">
  <% @topics.each do |topic| %>
  <%= link_to group_games_path(group, topic_id: topic.id ), data: {turbo_method: :post} do %>
    <div class="topic-card" data-action="click->topics#select" data-topic-name="<%= topic.topic %>">
      <%= image_tag "topics/#{topic.topic.downcase}.jpg", class: "topic-image" %>
      <h3><%= topic.topic.capitalize %></h3>
      <% @topicID = topic.id %>
    </div>
    <%end%>
  <% end %>
</div>
